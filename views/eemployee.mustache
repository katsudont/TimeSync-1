<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Employee - TimeSync</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  <link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/dataTables.bootstrap5.min.css">
  <style>
    html, body {
      height: 100%;
      margin: 0;
    }

    body {
      background-color: #0A1128;
      font-family: 'Roboto', Arial, sans-serif;
      display: flex;
      flex-direction: column;
    }

    .sidebar {
      height: 100vh;
      background: linear-gradient(180deg, #0A1128, #1C3D6E);
      color: white;
      overflow: hidden;
      padding-top: 20px;
    }

    .sidebar a {
      color: white;
      text-decoration: none;
      font-weight: bold;
      display: flex;
      align-items: center;
      text-align: left;
      padding: 15px 15px;
      gap: 15px;
      line-height: 2.5;
    }

    .sidebar a:hover {
      background-color: #ADD8E6;
      color: #0A1128;
      border-radius: 4px;
    }

    .navbar {
      background-color: #0A1128;
      color: white;
    }

    .navbar-brand {
      color: #ADD8E6;
      font-weight: bold;
      font-size: 1.8rem;
    }

    .navbar-brand:hover {
      color: #ADD8E6;
    }

    .card {
      background-color: white;
      border-radius: 8px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      color: black;
      flex-grow: 1;
      overflow: auto;
      height: calc(98vh - 70px);
      padding: 20px;
    }

    main {
      background: linear-gradient(180deg, #0A1128, #1C3D6E);
      min-height: 100vh;
    }

    .logout-btn {
      background-color: #dc3545;
      color: white;
      font-weight: bold;
      border: none;
      border-radius: 8px;
      padding: 10px 15px;
      width: 100%;
      margin-top: auto;
    }

    .logout-btn:hover {
      background-color: #f44336;
      color: white;
    }

    /* Style for the Employee List title */
    .employee-title {
      font-size: 2.5rem; /* Larger font size */
      font-weight: bold;
      color: #ADD8E6; /* Light blue color for text */
      text-transform: uppercase;
      background: linear-gradient(90deg, #0A1128, #ADD8E6); /* Gradient from dark blue to light blue */
      -webkit-background-clip: text;
      color: transparent;
      letter-spacing: 2px; /* Add spacing between letters */
      text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3); /* Soft shadow effect */
      padding: 10px 20px; /* Some padding around the text */
      border-radius: 5px; /* Optional rounded corners */
    }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <div class="col-12 col-md-3 col-lg-2 sidebar p-3 d-flex flex-column align-items-start">
        <div class="mb-4 text-center w-100">
          <img src="/path/to/logo.png" alt="Company Logo" class="img-fluid" style="max-width: 100px;">
        </div>
        <ul class="nav flex-column w-100">
          <li class="nav-item">
            <a href="/profile" class="nav-link py-2">
              <i class="fas fa-user-circle"></i> Profile
            </a>
          </li>
          <li class="nav-item">
            <a href="/employee" class="nav-link py-2">
              <i class="fas fa-users"></i> Employee
            </a>
          </li>
          <li class="nav-item">
            <a href="/admin" class="nav-link py-2">
              <i class="fas fa-user-shield"></i> Admin
            </a>
          </li>
          <li class="nav-item">
            <a href="/department" class="nav-link py-2">
              <i class="fas fa-building"></i> Department
            </a>
          </li>
          <li class="nav-item">
            <a href="/shift" class="nav-link py-2">
              <i class="fas fa-calendar-alt"></i> Shift
            </a>
          </li>
          <li class="nav-item">
            <a href="/attendance" class="nav-link py-2">
              <i class="fas fa-clock"></i> Attendance
            </a>
          </li>
        </ul>
        <button class="logout-btn mt-auto" onclick="showLogoutModal()">Logout</button>
      </div>

      <!-- Main Content -->
      <main class="col-12 col-md-9 col-lg-10">
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-dark px-3">
          <div class="container-fluid">
            <!-- Empty navbar content -->
          </div>
        </nav>

        <!-- Employee List -->
        <div class="card p-4 my-4">
          <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 class="employee-title">Employee List</h3>
            <!-- Add Employee Button -->
            <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addEmployeeModal">
              <i class="fas fa-plus"></i> Add Employee
            </button>
          </div>

          <table id="employeeTable" class="table table-bordered table-striped">
            <thead>
              <tr>
                <th>Employee ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Username</th>
                <th>Birthdate</th>
                <th>Hire Date</th>
                <th>Department</th>
              </tr>
            </thead>
            <tbody>
              {{#employees}}
              <tr>
                <td>{{EmployeeID}}</td>
                <td>{{Name}}</td>
                <td>{{Email}}</td>
                <td>{{Username}}</td>
                <td>{{Birthdate}}</td>
                <td>{{HireDate}}</td>
                <td>{{DepartmentName}}</td>
              </tr>
              {{/employees}}
            </tbody>
          </table>
        </div>

        <!-- Add Employee Modal -->
        <div class="modal fade" id="addEmployeeModal" tabindex="-1" aria-labelledby="addEmployeeModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="addEmployeeModalLabel">Add New Employee</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <!-- Add Employee Form -->
                <form id="addEmployeeForm" action="/employee" method="POST">
                  <div class="mb-3">
                    <label for="name" class="form-label">Full Name</label>
                    <input type="text" class="form-control" id="name" name="name" placeholder="Enter full name" required>
                  </div>
                  <div class="mb-3">
                    <label for="email" class="form-label">Email Address</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="Enter email" required>
                  </div>
                  <div class="mb-3">
                    <label for="birthdate" class="form-label">Birthdate</label>
                    <input type="date" class="form-control" id="birthdate" name="birthdate" required>
                  </div>
                  <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" class="form-control" id="username" name="username" placeholder="Enter username" required>
                  </div>
                  <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Enter password" required>
                  </div>
                  <div class="mb-3">
                    <label for="department" class="form-label">Department</label>
                    <select class="form-select" id="department" name="department" required>
                      <option value="">Select Department</option>
                      {{#departments}}
                      <option value="{{DepartmentID}}">{{DepartmentName}}</option>
                      {{/departments}}
                    </select>
                  </div>
                  <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Add Employee</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.5/js/dataTables.bootstrap5.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    $(document).ready(function () {
      // Initialize DataTable
      $('#employeeTable').DataTable();

      // Handle Add Employee Form Submission
      $('#addEmployeeForm').submit(function (e) {
        e.preventDefault();

        $.ajax({
          url: '/employee',
          method: 'POST',
          data: $(this).serialize(),
          success: function (response) {
            $('#addEmployeeModal').modal('hide');
            alert('Employee added successfully!');
            location.reload(); // Reload the page to display the new employee
          },
          error: function (error) {
            alert('Error adding employee');
          }
        });
      });
    });
  </script>
</body>
</html>
