<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profile</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  <style>
    html, body {
      height: 100%; /* Ensure full height */
      margin: 0; /* Remove default margin */
    }

    body {
      background-color: #0A1128; /* Match the sidebar color */
      font-family: 'Roboto', Arial, sans-serif;
      display: flex;
      flex-direction: column;
    }

    .sidebar {
      height: 100vh;
      background: linear-gradient(180deg, #0A1128, #1C3D6E);
      color: white;
      overflow: hidden; /* Prevent overflow in sidebar */
      padding-top: 20px;
    }

    .sidebar a {
      color: white;
      text-decoration: none;
      font-weight: bold;
      display: flex;
      align-items: center;
      text-align: left; /* Align the text to the left */
      padding: 15px 15px;
      gap: 15px; /* Adds spacing between the icon and text */
      line-height: 2.5;
    }

    .sidebar a:hover {
      background-color: #ADD8E6; /* Light blue hover */
      color: #0A1128;
      border-radius: 4px;
    }

    .navbar {
      background-color: #0A1128;
      color: white;
    }

    .navbar-brand {
      color: #ADD8E6; /* Light blue */
      font-weight: bold;
      font-size: 1.8rem;
    }

    .navbar-brand:hover {
      color: #ADD8E6; /* Light blue hover effect */
    }

    .card {
      background-color: white;
      border-radius: 8px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      color: black;
      flex-grow: 1; /* Allow card to grow to fill space */
      overflow: auto; /* Prevent card overflow but allow scroll if necessary */
      height: calc(98vh - 70px);
      padding: 20px;
    }

    .form-control[disabled] {
      background-color: #e9ecef;
    }

    .edit-btn {
      background-color: #1C3D6E;
      color: white;
      border: none;
      border-radius: 4px;
      padding: 4px 8px;
      font-size: 0.9rem;
      cursor: pointer;
    }

    .edit-btn:hover {
      background-color: #ADD8E6; /* Light blue hover effect */
      color: #0A1128;
    }

    .save-btn {
      background-color: #1C3D6E;
      color: white;
      font-weight: bold;
      border: none;
      border-radius: 8px;
      padding: 10px 15px;
      width: auto;
      margin: 20px auto 0;
      display: block;
    }

    .save-btn:hover {
      background-color: #ADD8E6; /* Light blue hover effect */
      color: #0A1128;
    }

    .logout-btn {
      background-color: #dc3545;
      color: white;
      font-weight: bold;
      border: none;
      border-radius: 8px;
      padding: 10px 15px;
      width: 100%;
      margin-top: auto; /* Move logout button to the bottom */
    }

    .logout-btn:hover {
      background-color: #f44336;
      color: white;
    }

    .user-name {
      font-weight: bold;
      font-size: 1rem;
      color: white;
    }

    main {
      background: linear-gradient(180deg, #0A1128, #1C3D6E); /* Matching the sidebar gradient */
      min-height: 100vh;
    }

    /* Style for the Profile title */
    .profile-title {
      font-size: 2.5rem; /* Larger font size */
      font-weight: bold;
      color: #ADD8E6; /* Light blue color for text */
      text-transform: uppercase;
      background: linear-gradient(90deg, #0A1128, #ADD8E6); /* Gradient from dark blue to light blue */
      -webkit-background-clip: text;
      color: transparent;
      letter-spacing: 2px; /* Add spacing between letters */
      text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3); /* Soft shadow effect */
      padding: 10px 20px; /* Some padding around the text */
      border-radius: 5px; /* Optional rounded corners */
    }

      /* Target only inputs inside input-group with edit button */
  .input-group .form-control {
    flex: none; /* Prevent stretching */
    width: 70%;  /* Set desired width */
    max-width: 385px; /* Optional: limit max width */
    margin-left: 75px;
  }

  .input-group .edit-btn {
    flex: none;  /* Ensure button doesn't stretch */
    margin-left: 10px;  /* Add spacing between input and button */
  }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <div class="col-12 col-md-3 col-lg-2 sidebar p-3">
        <div class="text-center mb-4">
          <a href="/admin-dashboard">
          <img src="/path/to/logo.png" alt="Logo" class="img-fluid" style="max-width: 100px;">
         </a>
        </div>
        <ul class="nav flex-column">
          <li class="nav-item">
            <a href="/profile" class="nav-link">
              <i class="fas fa-user-circle"></i> Profile
            </a>
          </li>
          <li class="nav-item">
            <a href="/employee" class="nav-link">
              <i class="fas fa-users"></i> Employee
            </a>
          </li>
          <li class="nav-item">
            <a href="/admin" class="nav-link">
              <i class="fas fa-user-shield"></i> Admin
            </a>
          </li>
          <li class="nav-item">
            <a href="/department" class="nav-link">
              <i class="fas fa-building"></i> Department
            </a>
          </li>
          <li class="nav-item">
            <a href="/shift" class="nav-link">
              <i class="fas fa-calendar-alt"></i> Shift
            </a>
          </li>
          <li class="nav-item">
            <a href="/attendance" class="nav-link">
              <i class="fas fa-clock"></i> Attendance
            </a>
          </li>
        </ul>
        <!-- Logout Button placed here -->
        <button class="logout-btn" onclick="showLogoutModal()">Logout</button>
      </div>

      <!-- Main Content -->
      <main class="col-12 col-md-9 col-lg-10">
        <nav class="navbar navbar-dark px-3">
          <h3 class="text-center welcome-text">Welcome, {{username}}!</h3>
        </nav>

        <div class="card mt-4">
          <h3 class="text-center mb-4">Profile</h3>

          <form id="profileForm" action="/profile/update" method="POST">
            <!-- Employee ID -->
            <div class="d-flex align-items-center mb-3">
              <label for="employeeId" class="form-label w-25">Employee ID</label>
              <input type="text" id="employeeId" name="employeeId" class="form-control w-25" value="{{profile.EmployeeID}}" disabled>
            </div>

              <!-- Name -->
              <div class="d-flex align-items-center mb-3">
                <label for="name" class="form-label w-25">Name</label>
                <div class="input-group">
                  <input type="text" id="name" name="name" class="form-control" value="{{profile.Name}}" disabled>
                  <button type="button" class="btn edit-btn ms-2" onclick="enableField('name')">
                    <i class="fas fa-pencil-alt"></i>
                  </button>
                </div>
              </div>

              <!-- Email -->
              <div class="d-flex align-items-center mb-3">
                <label for="email" class="form-label w-25">Email</label>
                <div class="input-group">
                  <input type="email" id="email" name="email" class="form-control" value="{{profile.Email}}" disabled>
                  <button type="button" class="btn edit-btn ms-2" onclick="enableField('email')">
                    <i class="fas fa-pencil-alt"></i>
                  </button>
                </div>
              </div>

              <!-- Username -->
              <div class="d-flex align-items-center mb-3">
                <label for="username" class="form-label w-25">Username</label>
                <div class="input-group">
                  <input type="text" id="username" name="username" class="form-control" value="{{profile.Username}}" disabled>
                  <button type="button" class="btn edit-btn ms-2" onclick="enableField('username')">
                    <i class="fas fa-pencil-alt"></i>
                  </button>
                </div>
              </div>

            <!-- Birthdate -->
            <div class="d-flex align-items-center mb-3">
              <label for="birthdate" class="form-label w-25">Birthdate</label>
              <input type="date" id="birthdate" name="birthdate" class="form-control w-25" value="{{profile.Birthdate}}" disabled>
            </div>

            <!-- Department -->
            <div class="d-flex align-items-center mb-3">
              <label for="department" class="form-label w-25">Department</label>
              <input type="text" id="department" name="department" class="form-control w-25" value="{{profile.DepartmentName}}" disabled>
            </div>

            <!-- Hire Date -->
            <div class="d-flex align-items-center mb-3">
              <label class="form-label w-25">Hire Date</label>
              <input type="text" class="form-control w-25" value="{{profile.HireDate}}" disabled>
            </div>

            <!-- Save Button -->
            <button type="submit" class="save-btn">Save Changes</button>
          </form>
                    
        </div>
      </main>
    </div>
  </div>

  <!-- Logout Modal -->
  <div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="logoutModalLabel">Are you sure you want to log out?</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          You will be logged out from the system.
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-danger" onclick="logout()">Logout</button>
        </div>
      </div>
    </div>
  </div>

  <script>
    function enableField(fieldId) {
      document.getElementById(fieldId).disabled = false;
    }

    document.getElementById('profileForm').addEventListener('submit', () => {
      document.querySelectorAll('#profileForm input').forEach(input => input.disabled = false);
    });

    function showLogoutModal() {
      var logoutModal = new bootstrap.Modal(document.getElementById('logoutModal'));
      logoutModal.show();
    }

    function logout() {
      console.log('User logged out');
      window.location.href = '/login';
    }
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
