<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard - TimeSync</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.datatables.net/1.13.5/css/dataTables.bootstrap5.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #0A1128;
      color: white;
      font-family: 'Roboto', Arial, sans-serif;
    }

    .sidebar {
      background: linear-gradient(180deg, #0A1128, #1C3D6E);
      height: 100vh;
      padding-top: 20px;
      color: white;
    }

    .sidebar a {
      color: white;
      text-decoration: none;
      font-weight: bold;
      display: flex;
      align-items: center;
      padding: 15px 20px;
      gap: 15px;
    }

    .sidebar a:hover {
      background-color: #ADD8E6;
      color: #0A1128;
      border-radius: 5px;
    }

    .navbar {
      background-color: #0A1128;
      color: white;
    }

    .navbar-brand {
      color: #ADD8E6;
      font-weight: bold;
      font-size: 1.8rem;
    }

    .navbar-brand:hover {
      color: #ADD8E6;
    }

    .card {
      background-color: #ffffff;
      color: #000;
      border-radius: 8px;
      box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

     main {
      background: linear-gradient(180deg, #0A1128, #1C3D6E);
      min-height: 100vh;
    }

    .logout-btn {
      background-color: #dc3545;
      color: white;
      font-weight: bold;
      border: none;
      border-radius: 8px;
      padding: 10px 15px;
      margin-top: 20px; /* Adjusted position */
      width: 100%;
    }

    .logout-btn:hover {
      background-color: #f44336;
      color: white;
    }

    .modal-body, .modal-title {
    color: #0A1128; /* Dark color to contrast with the white background */
  }

    .table th, .table td {
      text-align: center;
    }

    .admin-title {
      font-size: 2.5rem;
      font-weight: bold;
      color: #ADD8E6;
      text-transform: uppercase;
      background: linear-gradient(90deg, #0A1128, #ADD8E6);
      -webkit-background-clip: text;
      color: transparent;
      letter-spacing: 2px;
      text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
      padding: 10px 20px;
      border-radius: 5px;
      text-align: center;
    }

    .table-striped tbody tr:nth-child(odd) {
      background-color: #f1f1f1;
    }

    .welcome-text {
      font-size: 2rem;
      font-weight: bold;
      color: #ADD8E6;
      text-align: center;
      margin-top: 10px;
    }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <div class="col-12 col-md-3 col-lg-2 sidebar p-3">
        <div class="text-center mb-4">
          <img src="/path/to/logo.png" alt="Logo" class="img-fluid" style="max-width: 100px;">
        </div>
        <ul class="nav flex-column">
          <li class="nav-item">
            <a href="/profile" class="nav-link">
              <i class="fas fa-user-circle"></i> Profile
            </a>
          </li>
          <li class="nav-item">
            <a href="/employee" class="nav-link">
              <i class="fas fa-users"></i> Employee
            </a>
          </li>
          <li class="nav-item">
            <a href="/admin" class="nav-link">
              <i class="fas fa-user-shield"></i> Admin
            </a>
          </li>
          <li class="nav-item">
            <a href="/department" class="nav-link">
              <i class="fas fa-building"></i> Department
            </a>
          </li>
          <li class="nav-item">
            <a href="/shift" class="nav-link">
              <i class="fas fa-calendar-alt"></i> Shift
            </a>
          </li>
          <li class="nav-item">
            <a href="/attendance" class="nav-link">
              <i class="fas fa-clock"></i> Attendance
            </a>
          </li>
        </ul>
        <!-- Logout Button placed here -->
        <button class="logout-btn" onclick="showLogoutModal()">Logout</button>
      </div>

      <!-- Main Content -->
      <main class="col-12 col-md-9 col-lg-10">
        <nav class="navbar navbar-expand-lg navbar-dark">       
          <h3 class="text-center welcome-text">Welcome, {{username}}!</h3>
        </nav>

        <!-- Admin Dashboard -->
        <div class="card p-4 my-4">
          <h3 class="admin-title">Admin Dashboard</h3>

          <div class="row my-4">
            <div class="col-md-4">
              <div class="card p-3 text-center">
                <h5>Total Employees</h5>
                <h2>{{employeeCount}}</h2>
              </div>
            </div>
            <div class="col-md-4">
              <div class="card p-3 text-center">
                <h5>Total Admins</h5>
                <h2>{{adminCount}}</h2>
              </div>
            </div>
            <div class="col-md-4">
              <div class="card p-3 text-center">
                <h5>Total Departments</h5>
                <h2>{{departmentCount}}</h2>
              </div>
            </div>
          </div>

          <div class="card p-3">
            <h5>Latest Attendance Records</h5>
            <div class="table-responsive">
              <table class="table table-striped" id="attendanceTable">
                <thead>
                  <tr>
                    <th>Employee ID</th>
                    <th>Name</th>
                    <th>Department</th>
                    <th>Time In</th>
                    <th>Status</th>
                    <th>Time Out</th>
                    <th>Status</th>
                  </tr>
                </thead>
                <tbody>
                  {{#recentAttendance}}
                  <tr>
                    <td>{{EmployeeID}}</td>
                    <td>{{EmployeeName}}</td>
                    <td>{{DepartmentName}}</td>
                    <td>{{InTime}}</td>
                    <td>{{InStatus}}</td>
                    <td>{{OutTime}}</td>
                    <td>{{OutStatus}}</td>
                  </tr>
                  {{/recentAttendance}}
                  {{^recentAttendance}}
                  <tr>
                    <td colspan="7" class="text-center">No recent attendance records available.</td>
                  </tr>
                  {{/recentAttendance}}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>

  <!-- Logout Modal -->
  <div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="logoutModalLabel">Confirm Logout</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          Are you sure you want to log out?
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-danger" onclick="logout()">Logout</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

  <script>
    // Function to show the logout confirmation modal
    function showLogoutModal() {
      const logoutModal = new bootstrap.Modal(document.getElementById('logoutModal'));
      logoutModal.show();
    }

    // Function to handle the logout action
    function logout() {
      window.location.href = "/login"; // Change this to your actual logout route
    }
  </script>
</body>
</html>
